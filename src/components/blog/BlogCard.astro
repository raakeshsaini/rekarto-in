---
const { href, title, excerpt, date, image } = Astro.props;
---

<a
  href={href}
  class="block rounded-xl border border-zinc-200 bg-white hover:border-zinc-300 transition"
>
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover rounded-t-xl"
      loading="lazy"
    />
  )}

  <div class="p-4 space-y-2">
    <h3 class="font-semibold text-zinc-900 leading-snug">
      {title}
    </h3>

    <p class="text-sm text-zinc-600">
      {excerpt}
    </p>

    <p class="text-xs text-zinc-400">
      {date}
    </p>
  </div>
</a>
