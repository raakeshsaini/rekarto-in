---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section class="rounded-xl border border-zinc-200 bg-white p-6 sm:p-8 space-y-4">
  {title && (
    <h2 class="text-lg font-semibold text-zinc-900">
      {title}
    </h2>
  )}
  <div class="prose prose-zinc max-w-none">
    <slot />
  </div>
</section>
